<p id="notice"><%= notice %></p>

<h1>Longboards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Length</th>
      <th>Style</th>
      <th>Manufacturer</th>
      <th>Purpose</th>
      <th>Is available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @longboards.each do |longboard| %>
      <tr>
        <td><%= longboard.name %></td>
        <td><%= longboard.length %></td>
        <td><%= longboard.style %></td>
        <td><%= longboard.manufacturer %></td>
        <td><%= longboard.purpose %></td>
        <td><%= longboard.is_available %></td>
        <td><%= link_to 'Show', longboard %></td>
        <td><%= link_to 'Edit', edit_longboard_path(longboard) %></td>
        <td><%= link_to 'Destroy', longboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Longboard', new_longboard_path %>
